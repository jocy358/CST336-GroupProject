<!DOCTYPE html>
<html>
<head>
  <title><%= food.food_name %> Nutrition</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 2em;
      background: #f9f9f9;
    }
    h1 {
      color: #333;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1em;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 0.75em;
      text-align: center;
    }
    th {
      background-color: #f0f0f0;
    }
  </style>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <%- include('partials/header.ejs')%> <br>
    <%- include('partials/title.ejs')%> 
    <%- include('partials/navbar.ejs')%> 
  <h1><%= food.food_name %> - Nutritional Information</h1>
  <p><a href="<%= food.food_url %>" target="_blank">View on FatSecret</a></p>

  <table>
    <thead>
      <tr>
        <th>Serving</th>
        <th>Calories</th>
        <th>Protein (g)</th>
        <th>Fat (g)</th>
        <th>Carbs (g)</th>
        <th>Sugar (g)</th>
        <th>Fiber (g)</th>
        <th>Calcium (mg)</th>
        <th>Iron (mg)</th>
      </tr>
    </thead>
    <tbody>
      <% food.servings.serving.forEach(serving => { %>
        <tr>
          <td><%= serving.serving_description %></td>
          <td><%= serving.calories %></td>
          <td><%= serving.protein %></td>
          <td><%= serving.fat %></td>
          <td><%= serving.carbohydrate %></td>
          <td><%= serving.sugar %></td>
          <td><%= serving.fiber %></td>
          <td><%= serving.calcium %></td>
          <td><%= serving.iron %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
