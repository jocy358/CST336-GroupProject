                                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div>
                    <h2>Snacks</h2> <br>
                    <input type="text" id="addSnacksInput"><button>+ add food</button>
                    <div id="snacksList">
                        <br>
                        <% for (snack of rows3) { %>
