<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header.ejs')%>
    <%- include('partials/title.ejs')%>
<body>
    <h2>Login to Your Account!</h2>
    <form method="POST" action="/login"> 
        <input class = "textbox" type="text" id= "username_input" name = "username" placeholder="Username"><br><br>
        <input class = "textbox" type="password" id= "password_input" name = "password" placeholder="Password"><br>
        <input class = "button" type="submit" value="Log In">

    </form>
    <% if(typeof(error) != "undefined") { %>
        <%= error %>
    <% } %>

    <a href="/signUp">
        <button id="sign_up_input" name = "sign_up" class ="button">Sign Up</button>
    </a>
   
    
</body>
</html>